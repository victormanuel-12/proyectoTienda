@model List<proyectoTienda.Models.Producto>

@{
    ViewData["Title"] = "Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SHOP.CO - Descubre</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body>
    @* Header (Navbar, categorías, etc.) estático *@
    <header class="sticky-top">
      <nav class="navbar navbar-expand-lg bg-white">
        <div class="container-fluid">
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <a class="navbar-brand logo" href="/Home/Index">SHOP.CO</a>

          <div
            class="d-lg-none ms-auto d-flex align-items-center navbar-nav-icons-mobile"
          >
            <a href="#" class="nav-link px-2" aria-label="Carrito de compras">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="9" cy="21" r="1"></circle>
                <circle cx="20" cy="21" r="1"></circle>
                <path
                  d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"
                ></path>
              </svg>
            </a>
            <a
              href="iniciarSesion.html"
              class="nav-link ps-2 pe-0"
              aria-label="Iniciar sesión"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </a>
          </div>

          <div class="d-none d-lg-flex align-items-center flex-grow-1">
            

            <div class="search-container-desktop">
              <svg
                class="search-icon"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
              </svg>
              <input type="search" placeholder="Buscar productos..." />
            </div>

            <div class="nav-icons-desktop">
              <a asp-controller="Carrito" asp-action="Carrito" class="cart-link" aria-label="Carrito de compras">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <circle cx="9" cy="21" r="1"></circle>
                  <circle cx="20" cy="21" r="1"></circle>
                  <path
                    d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"
                  ></path>
                </svg>
              </a>
              <a
                href="iniciarSesion.html"
                class="user-account-link"
                aria-label="Iniciar sesión"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Iniciar Sesión</span>
              </a>
            </div>
          </div>
        </div>
      </nav>

      <div
        class="offcanvas offcanvas-start"
        tabindex="-1"
        id="offcanvasNavbar"
        aria-labelledby="offcanvasNavbarLabel"
      >
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasNavbarLabel">SHOP.CO</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="offcanvas"
            aria-label="Close"
          ></button>
        </div>
        <div class="offcanvas-body">
          <div class="search-container-mobile position-relative mb-3">
            <svg
              class="search-icon-mobile"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input
              class="form-control"
              type="search"
              placeholder="Buscar productos..."
            />
          </div>

          <ul class="navbar-nav justify-content-end flex-grow-1">
            <li class="nav-item category-header ps-3">Categorías</li>
            <li class="nav-item">
              <a class="nav-link" class="dropdown-item" href="@Url.Action("Index", "Catalogo", new { categoriaId = 1 })">Polos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" class="dropdown-item" href="@Url.Action("Index", "Catalogo", new { categoriaId = 2 })">Jeans</a>
            </li>
            <li class="nav-item category-header ps-3 mt-2">Contacto</li>
            <li class="nav-item">
              <a class="nav-link" href="#">Atencion al cliente</a>
            </li>
          </ul>
        </div>
      </div>
    </header>

    <main class="home-container">
        <section class="hero-section">
            <div class="hero-content">
                <h1 class="hero-title">
                    ENCUENTRA ROPA <span class="text-primary">QUE COMBINE CON TU ESTILO</span>
                </h1>
              
              
              
              
              

                <a class=" btn hero-btn" asp-controller="Catalogo" asp-action="Index">Compra ahora</a>

                
            </div>
        </section>

        <section class="new-arrivals-section">
            <div class="section-header">
                <h2 class="section-title">
                    NUEVOS <span class="text-primary">LANZAMIENTOS</span>
                </h2>
            </div>

            <div class="row gy-4 product-row">
            @foreach (var producto in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <a href="@Url.Action("Detalles", "Catalogo", new { id = producto.IDProducto })" class="product-link">
                        <div class="product-card">
                            <div class="product-image-container">
                                <img src="@producto.ImagenURL" alt="@producto.Nombre" class="img-fluid" />
                            </div>
                            <div class="product-info">
                                <h3>@producto.Nombre</h3>
                                <p class="price">$@producto.PrecioActual</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
            </div>

            <div class="view-all-container">
                <a href="/Catalogo/Index" class="view-all-btn">Ver todo</a>
            </div>
        </section>

        <section class="categories-section">
            <div class="section-header">
                <h2 class="section-title">CATEGORIAS</h2>
            </div>
            <div class="row gy-4">
                <div class="col-12 col-md-6">
                    <div class="category-card">
                        <div class="category-image-container">
                            <img src="https://img.freepik.com/fotos-premium/estante-ropa-camisa-azul-colgando-izquierda_248459-26412.jpg" alt="Polos" />
                        </div>
                        <div class="category-info">
                            <h3>POLOS</h3>
                            <a href="/Catalogo/Index?categoriaId=1" class="category-link">Ver colección</a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="category-card">
                        <div class="category-image-container">
                            <img src="https://img.freepik.com/fotos-premium/jeans-o-pantalones-denim-estante-tienda-ropa_896558-30801.jpg" alt="Jeans" />
                        </div>
                        <div class="category-info">
                            <h3>JEANS</h3>
                            <a href="/Catalogo/Index?categoriaId=2" class="category-link">Ver colección</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer>
      <div class="container">
        <div class="row gy-4">
          <div class="col-12 col-lg-4 footer-col">
            <a href="index.html" class="footer-logo">SHOP.CO</a>
            <p>
              Tenemos ropa que se adapta a tu estilo y que te enorgullecerá
              llevar. Para mujer y hombre.
            </p>
          </div>
          <div class="col-6 col-lg-2 footer-col">
            <h4>Empresa</h4>
            <ul>
              <li>Empresa dedicada a la venta de prendas de vestir</li>
              
            </ul>
          </div>
          <div class="col-6 col-lg-3 footer-col">
            <h4>Ayuda</h4>
            <ul>
              <li><a href="#">Soporte al Cliente</a></li>
            </ul>
          </div>
          <div class="col-12 col-lg-3 footer-col">
            <h4>Contacto</h4>
            <div class="contact-block">
              <div class="contact-block-text">
                <p>Atención al cliente:<br />987645321</p>
              </div>
              <div class="whatsapp-icon">
                <a
                  href="https://wa.me/51987645321"
                  target="_blank"
                  aria-label="WhatsApp"
                >
                  <i class="fab fa-whatsapp"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          Shop.co © 2000-2025, All Rights Reserved
        </div>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        // Función que se ejecutará cuando se haga clic en el dropdown
        function handleDropdownClick(event) {
            // Aquí puedes hacer cualquier acción que desees cuando se haga clic
            console.log('Dropdown fue clickeado');
            
            // Ejemplo: Agregar o quitar una clase CSS cuando se haga clic
            const dropdownMenu = document.querySelector('.dropdown-menu');
            dropdownMenu.classList.toggle('show');
            
            // Si deseas, puedes prevenir el comportamiento predeterminado de Bootstrap
            // event.preventDefault();
        }
    </script>
</body>
</html>


@model proyectoTienda.Models.Model.Contacto

@{
    ViewData["Title"] = "Contáctanos";
    Layout = "_LayoutHome";
}


  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SHOP.CO - Descubre</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="~/css/producto.css" />
    <link rel="stylesheet" href="~/css/contacto.css" />
  </head>

<div class="contact-container">
    <div class="contact-header">
        <h2>Contáctanos</h2>
        <p class="contact-subtitle">Estamos aquí para ayudarte</p>
    </div>

    <div class="contact-form-container">
        <form method="post" asp-action="RegistrarContacto" class="contact-form">
            <div class="form-group">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label asp-for="Correo" class="form-label">Correo electrónico</label>
                <input asp-for="Correo" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label asp-for="Telefono" class="form-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" placeholder="Ingresa tu número telefónico"/>
            </div>

            <div class="form-group">
                <label asp-for="Mensaje" class="form-label">Tu mensaje</label>
                <textarea asp-for="Mensaje" class="form-control" rows="4" placeholder="¿Cómo podemos ayudarte?"></textarea>
                <span asp-validation-for="Mensaje" class="text-danger validation-message"></span>
            </div>

            <button type="submit" class="btn-submit">Enviar mensaje <i class="fas fa-arrow-right"></i></button>
        </form>
    </div>

@if(ViewData["Message"] != null)
{
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                icon: 'success',
                text: '@ViewData["Message"]',
                showConfirmButton: true,
                confirmButtonText: 'Cerrar',
                buttonsStyling: false,
                customClass: {
                    confirmButton: 'swal-custom-btn',
                    popup: 'swal-custom-popup'
                },
                background: '#ffffff',
                backdrop: `
                    rgba(0,0,0,0.05)
                    url("/images/confetti.gif")
                    center top
                    no-repeat
                `,
                timer: 9000,
                timerProgressBar: true,
                allowOutsideClick: false, 
                allowEscapeKey: false 
                }).then((result) => {
                    if (result.isConfirmed || result.dismiss === Swal.DismissReason.timer) {
                        window.location.href = '@Url.Action("Index", "Home")';
                    }
            });
        </script>

}

</div>

<footer>
      <div class="container">
        <div class="row gy-4">
          <div class="col-12 col-lg-4 footer-col">
            <a href="index.html" class="footer-logo">SHOP.CO</a>
            <p>
              Tenemos ropa que se adapta a tu estilo y que te enorgullecerá
              llevar. Para mujer y hombre.
            </p>
          </div>
          <div class="col-6 col-lg-2 footer-col">
            <h4>Empresa</h4>
            <ul>
              <li>Empresa dedicada a la venta de prendas de vestir</li>
              
            </ul>
          </div>
          <div class="col-6 col-lg-3 footer-col">
            <h4>Ayuda</h4>
            <ul>
              <li><a href="#">Soporte al Cliente</a></li>
            </ul>
          </div>
          <div class="col-12 col-lg-3 footer-col">
            <h4>Contacto</h4>
            <div class="contact-block">
              <div class="contact-block-text">
                <p>Atención al cliente:<br />987645321</p>
              </div>
              <div class="whatsapp-icon">
                <a
                  href="https://wa.me/51987645321"
                  target="_blank"
                  aria-label="WhatsApp"
                >
                  <i class="fab fa-whatsapp"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          Shop.co © 2000-2025, All Rights Reserved
        </div>
      </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URBAN THREADS - Dashboard</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
    <link href="~/css/AdminHome.css" rel="stylesheet" />
  </head>
  <body>
    <div class="sidebar">
        <div class="logo">SHOP.CO</div>
        <div class="nav-items">
          <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard"><i>📊</i>
                <span>Dashboard</span></a>
            
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Categoria"><i>👗</i>
                <span>Categorias</span></a>
            
            <a class="nav-item text-dark" asp-area="" asp-controller="Admin" asp-action="Agregar Categoria"><i>➕</i>
                <span>Agregar Categoria</span></a>
            
            <a class="nav-item text-dark" asp-area="" asp-controller="Admin" asp-action="Productos"><i>👗</i>
                <span>Productos</span></a>
            
            <a class="nav-item text-dark" asp-area="" asp-controller="Admin" asp-action="AgregarProducto"><i>➕</i>
                <span>Agregar Producto</span></a>
            
            <a class="nav-item text-dark" asp-area="" asp-controller="Admin" asp-action="ListaOrdenes"> <i>📝</i>
                <span>Pedidos</span></a>
            
        </div>
    </div>

    <div class="main-content">
      <h1 class="page-title">DASHBOARD</h1>
      <div class="dashboard-grid">
        <div class="card">
          <div class="card-body">
            <div class="card-icon-wrapper">
              <div class="card-icon revenue-icon">
                <div class="icon">💸</div>
              </div>
            </div>
            <div class="card-info">
              <h3 class="card-title">Ingresos Totales</h3>
              <div class="card-value"></div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <div class="card-icon-wrapper">
              <div class="card-icon products-icon">
                <div class="icon">👗</div>
              </div>
            </div>
            <div class="card-info">
              <h3 class="card-title">Total de Productos</h3>
              <div class="card-value"></div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <div class="card-icon-wrapper">
              <div class="card-icon orders-icon">
                <div class="icon">🛍️</div>
              </div>
            </div>
            <div class="card-info">
              <h3 class="card-title">Órdenes Mensuales</h3>
              <div class="card-value"></div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <div class="card-icon-wrapper">
              <div class="card-icon customers-icon">
                <div class="icon">👥</div>
              </div>
            </div>
            <div class="card-info">
              <h3 class="card-title">Nuevos Clientes</h3>
              <div class="card-value"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

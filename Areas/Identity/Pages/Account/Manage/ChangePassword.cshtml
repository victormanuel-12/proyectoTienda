@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-white border-0 pt-4 pb-2">
                <h3 class="card-title mb-0">
                    <i class="bi bi-shield-lock me-2"></i>@ViewData["Title"]
                </h3>
            </div>
            <div class="card-body p-4">
                <partial name="_StatusMessage" for="StatusMessage" />
                
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" 
                               aria-required="true" placeholder="Ingrese su contraseña actual" />
                        <label asp-for="Input.OldPassword" class="form-label">
                            <i class="bi bi-lock-fill me-2"></i>Contraseña actual
                        </label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" 
                               aria-required="true" placeholder="Ingrese su nueva contraseña" />
                        <label asp-for="Input.NewPassword" class="form-label">
                            <i class="bi bi-key-fill me-2"></i>Nueva contraseña
                        </label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" 
                               aria-required="true" placeholder="Confirme su nueva contraseña" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">
                            <i class="bi bi-key me-2"></i>Confirmar nueva contraseña
                        </label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-repeat me-2"></i>Actualizar contraseña
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
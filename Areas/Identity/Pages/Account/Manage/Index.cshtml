@page
@model IndexModel
@{
    ViewData["Title"] = "Mi perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-white border-0 pt-4 pb-2">
                <h3 class="card-title mb-0">
                    <i class="bi bi-person-circle me-2"></i>@ViewData["Title"]
                </h3>
            </div>
            <div class="card-body p-4">
                <partial name="_StatusMessage" for="StatusMessage" />
                
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
                    
                    <div class="form-floating mb-4 input-group">
                        <input asp-for="Username" class="form-control" placeholder="Nombre de usuario" disabled />
                        <span class="input-group-text bg-success text-white">
                            <i class="bi bi-check-lg"></i>
                        </span>
                        <label asp-for="Username" class="form-label">
                            <i class="bi bi-person-badge me-2"></i>Usuario
                        </label>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Número de celular" />
                        <label asp-for="Input.PhoneNumber" class="form-label">
                            <i class="bi bi-telephone-fill me-2"></i>Número de celular
                        </label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save-fill me-2"></i>Guardar cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "_LayoutHomeLogin";
}

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
    rel="stylesheet"
/>
<link rel="stylesheet" href="~/css/iniciarSesion.css" asp-append-version="true"/>

<main class="login-container">
    <div class="login-card">
        <h1 class="login-title">
            Debes iniciar sesión <span class="text-primary">para continuar</span>
        </h1>
        <p class="login-subtitle">Por favor ingrese sus datos</p>

        <div class="login-form">
            <h2 class="form-title">Iniciar Sesión</h2>
            
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Correo</label>
                    <input 
                        asp-for="Input.Email" 
                        class="form-control" 
                        autocomplete="username" 
                        aria-required="true" 
                        placeholder="Correo" 
                    />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input 
                        asp-for="Input.Password" 
                        class="form-control" 
                        autocomplete="current-password" 
                        aria-required="true" 
                        placeholder="Contraseña" 
                        type="password"
                    />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="remember-me">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="login-btn">
                    Iniciar Sesión <i class="fas fa-arrow-right"></i>
                </button>

                <div class="login-links">
                    <p class="register-link">
                        ¿No eres miembro? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crea una cuenta</a>
                    </p>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}